{
    "name": "matchzy-auto-tournament",
    "version": "1.0.0",
    "description": "Tournament management API for CS2 MatchZy plugin",
    "main": "dist/index.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:server\" \"npm run dev:client:host\" --names \"API,CLIENT\" --prefix-colors \"cyan,magenta\"",
        "dev:localhost": "concurrently \"npm run dev:server\" \"npm run dev:client\" --names \"API,CLIENT\" --prefix-colors \"cyan,magenta\"",
        "dev:server": "tsx watch src/index.ts",
        "dev:client": "vite",
        "dev:client:host": "vite --host",
        "dev:debug": "LOG_LEVEL=debug tsx watch src/index.ts",
        "build": "npm run build:server && npm run build:client",
        "build:server": "tsc",
        "build:client": "vite build",
        "start": "node dist/index.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "docs:serve": "mkdocs serve --config-file docs/mkdocs.yml",
        "docs:build": "mkdocs build --config-file docs/mkdocs.yml",
        "db": "docker ps --format '{{.Names}}' | grep -q '^matchzy-postgres$' && echo '✅ PostgreSQL container is already running' || (docker ps -a --format '{{.Names}}' | grep -q '^matchzy-postgres$' && (docker start matchzy-postgres && echo '✅ Started existing PostgreSQL container') || (docker run -d --name matchzy-postgres -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=matchzy_tournament -p 5432:5432 postgres:16-alpine && echo '✅ Created and started PostgreSQL container'))",
        "db:stop": "docker stop matchzy-postgres 2>/dev/null && echo '✅ Stopped PostgreSQL container' || echo '⚠️  PostgreSQL container not running'",
        "db:restart": "yarn db:stop && sleep 1 && yarn db",
        "db:remove": "docker rm -f matchzy-postgres 2>/dev/null && echo '✅ Removed PostgreSQL container' || echo '⚠️  PostgreSQL container not found'",
        "test": "bash scripts/test-e2e-all.sh",
        "test:manual": "playwright test",
        "test:ui": "playwright test --ui",
        "test:report": "playwright show-report",
        "test:install": "playwright install"
    },
    "keywords": [
        "cs2",
        "matchzy",
        "tournament",
        "express",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.4",
        "@mui/material": "^7.3.4",
        "brackets-manager": "^1.7.1",
        "brackets-memory-db": "^1.0.5",
        "brackets-model": "^1.5.1",
        "cors": "^2.8.5",
        "dathost-rcon-client": "^1.0.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "i18next": "^23.0.0",
        "i18next-browser-languagedetector": "^7.0.0",
        "node-fetch": "^2.7.0",
        "pg": "^8.16.3",
        "pino": "^10.1.0",
        "pino-pretty": "^13.1.2",
        "react-zoom-pan-pinch": "^3.7.0",
        "socket.io": "^4.8.1",
        "socket.io-client": "^4.8.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.56.1",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/node": "^20.10.5",
        "@types/node-fetch": "^2.6.13",
        "@types/pg": "^8.15.6",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@types/react-router-dom": "^5.3.3",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "@vitejs/plugin-react": "^4.2.1",
        "concurrently": "^9.2.1",
        "eslint": "^9.39.0",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-compiler": "^19.1.0-rc.2",
        "eslint-plugin-react-hooks": "^7.0.1",
        "playwright": "^1.56.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "sass": "^1.93.3",
        "tsx": "^4.7.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    }
}